@model IEnumerable<MVC_Blog.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Bloglar</h2>

<p>
    @Html.ActionLink("Yeni Blog Ekle", "Create", null, new { @class = "btn btn-primary " })
    <hr />
</p>
@if (TempData["Blog"] != null)
{
    var blog = (MVC_Blog.Models.Blog)TempData["Blog"];
    <div class="alert alert-success"><strong>@blog.BlogAdi</strong> başarıyla güncellendi.</div>
}
   
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.KategoriAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogKonu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogIcerik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Onay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.KategoriAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogKonu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogIcerik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resim)
            </td>
            <td>
                @if (item.Onay == true)
                {
                    <label class="label label-success">Onaylandı</label>
                }
                else
                {
                    <label class="label label-danger">Onay Bekliyor</label>
                }
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.EklenmeTarihi)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
